    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --cache --color --ext .jsx,.js src",
    "lintFix": "eslint --fix",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  },
  "keywords": [],
  "author": "dengyi",
  "license": "GPL-3.0-or-later",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
